{
	"name": "soundbit-api",
	"description": "A RESTful API made to provide data to the Soundbit web and mobile app. Built with TypeScript, Node.js.",
	"version": "0.1.0",
	"license": "MIT",
	"scripts": {
		"start": "node dist/interface/http/server.js",
		"start:dev": "nodemon src/interface/http/server.ts",
		"migration:run": "sucrase-node ./node_modules/.bin/typeorm migration:run",
		"migration:generate": "sucrase-node ./node_modules/.bin/typeorm migration:generate -n",
		"migration:create": "sucrase-node ./node_modules/.bin/typeorm migration:create -n",
		"migration:revert": "sucrase-node ./node_modules/.bin/typeorm migration:revert",
		"seed": "sucrase-node ./node_modules/typeorm-seeding/dist/cli.js seed",
		"build": "tsc",
		"lint": "eslint . --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ramos-ph/soundbit-api.git"
	},
	"keywords": [
		"typescript",
		"nodejs"
	],
	"authors": [
		"Hugo Kishi - @hugokishi",
		"João Alves - @J-Alvez",
		"Juan Trindade - @JuanTrindade",
		"Nícolas Carvalho - @noccss",
		"Pedro Ramos - @ramos-ph"
	],
	"nodemonConfig": {
		"execMap": {
			"ts": "sucrase-node"
		}
	},
	"devDependencies": {
		"@types/express": "^4.17.12",
		"@types/node": "^15.6.2",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"dotenv": "^10.0.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^5.1.0",
		"nodemon": "^2.0.7",
		"prettier": "^2.3.0",
		"sucrase": "^3.18.1",
		"sucrase-node": "^10.0.0",
		"typescript": "^4.3.2"
	},
	"dependencies": {
		"express": "^4.17.1",
		"pg": "^8.6.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.33"
	}
}
